<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroud1">
    <ImageView
        android:layout_marginTop="15dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="12dp"
        android:scaleX="2"
        android:scaleY="2"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/titlegametritue"
        android:id="@+id/img_titleapp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <LinearLayout
        android:weightSum="2"
        android:layout_below="@id/img_titleapp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/frl_gameHinhHoc"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_iconHinhThoi"
                android:src="@drawable/hinhthoi_emj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_iconTamGiac"
                android:layout_marginTop="7dp"
                android:src="@drawable/tamgiac_emj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_iconHinhTron"
                android:layout_marginLeft="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/hinhtron_emj"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:layout_marginTop="90dp"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="Hình Học"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

    </LinearLayout>
</RelativeLayout>